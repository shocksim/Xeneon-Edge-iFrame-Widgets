<div id="widget-container">
    <header>
        <h2>Premier League</h2>
        <div class="live-indicator"><span class="dot"></span> LIVE DATA</div>
    </header>
    <div id="scoreboard">
        <div class="message">Loading scores...</div>
    </div>
</div>

<script>
    // CHANGED: Pointing to EPL endpoint
    const API_URL = "https://site.api.espn.com/apis/site/v2/sports/soccer/eng.1/scoreboard";
    const REFRESH_RATE = 60000;

    async function fetchScores() {
        try {
            const response = await fetch(API_URL);
            if (!response.ok) throw new Error('Network response was not ok');
            const data = await response.json();
            renderGames(data);
        } catch (error) {
            console.error("Error fetching EPL scores:", error);
            document.getElementById('scoreboard').innerHTML = 
                '<div class="message">Unable to load scores. <br> Check console for details.</div>';
        }
    }

    function renderGames(data) {
        const scoreboard = document.getElementById('scoreboard');
        scoreboard.innerHTML = '';

        const games = data.events;

        if (!games || games.length === 0) {
            scoreboard.innerHTML = '<div class="message">No matches scheduled for today.</div>';
            return;
        }

        games.forEach(game => {
            const competition = game.competitions[0];
            const status = game.status.type.shortDetail; // e.g. "FT", "HT", "45+2'"
            const isCompleted = game.status.type.completed;

            const homeTeam = competition.competitors.find(c => c.homeAway === 'home');
            const awayTeam = competition.competitors.find(c => c.homeAway === 'away');

            // Note: Soccer uses team IDs/URLs, not usually abbreviations.
            // We use the provided URL but check if we need to swap dimensions for quality.
            const getLogo = (url) => {
                if(!url) return '';
                // Attempt to force higher res if the URL contains dimensions
                return url.replace("&w=50&h=50", "&w=500&h=500"); 
            };

            const card = document.createElement('div');
            card.className = 'game-card';
            
            // NOTE: Swapped order for Soccer (Home usually listed first/top)
            card.innerHTML = `
                <div class="game-status">${status}</div>
                
                <div class="team-row ${isCompleted && Number(homeTeam.score) < Number(awayTeam.score) ? 'loser' : 'winner'}">
                    <div class="team-info">
                        <img src="${homeTeam.team.logo}" class="team-logo" alt="${homeTeam.team.abbreviation}">
                        <span class="team-name">${homeTeam.team.abbreviation}</span>
                    </div>
                    <span class="score">${homeTeam.score}</span>
                </div>

                <div class="team-row ${isCompleted && Number(awayTeam.score) < Number(homeTeam.score) ? 'loser' : 'winner'}">
                    <div class="team-info">
                        <img src="${awayTeam.team.logo}" class="team-logo" alt="${awayTeam.team.abbreviation}">
                        <span class="team-name">${awayTeam.team.abbreviation}</span>
                    </div>
                    <span class="score">${awayTeam.score}</span>
                </div>
            `;

            scoreboard.appendChild(card);
        });
    }

    fetchScores();
    setInterval(fetchScores, REFRESH_RATE);
</script>

</body>
</html>
