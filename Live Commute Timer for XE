        Live Traffic Widget
    </div>

    <div id="settings-overlay">
        <h3 style="margin-top:0">Settings</h3>

        <div class="settings-title">Data</div>
        <div class="input-group">
            <label>Google API Key</label>
            <input type="password" id="input-api-key" placeholder="Paste Key Here">
        </div>
        <div class="input-group">
            <label>Home Address</label>
            <input type="text" id="input-home" placeholder="e.g. 123 Main St">
        </div>
        <div class="input-group">
            <label>Work Address</label>
            <input type="text" id="input-work" placeholder="e.g. 500 Enterprise Way">
        </div>
        
        <div class="input-group">
            <label>Update Frequency (Save Resources)</label>
            <select id="input-refresh">
                <option value="300000">Every 5 Mins (High)</option>
                <option value="600000">Every 10 Mins (Standard)</option>
                <option value="900000">Every 15 Mins (Efficient)</option>
                <option value="1800000">Every 30 Mins (Eco)</option>
                <option value="3600000">Every 60 Mins (Max Eco)</option>
            </select>
        </div>

        <div class="settings-title">Appearance</div>
        
        <div class="input-group">
            <label>Background Image</label>
            <label for="bg-upload" class="file-upload-label">Click to Upload Image...</label>
            <input type="file" id="bg-upload" accept="image/*">
        </div>

        <div class="input-group">
            <label>Glass Blur: <span id="blur-val">15px</span></label>
            <input type="range" id="input-blur" min="0" max="40" value="15">
        </div>

        <div class="input-group">
            <label>BG Brightness: <span id="bright-val">100%</span></label>
            <input type="range" id="input-brightness" min="10" max="150" value="100">
        </div>

        <button class="save-btn" onclick="saveSettings()">SAVE & RESTART</button>
        <button class="close-btn" onclick="closeSettings()">Cancel</button>
    </div>
