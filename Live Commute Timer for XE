<script>
    // --- STATE ---
    let apiKey = '';
    let homeAddr = '';
    let workAddr = '';
    let isHomeToWork = true;
    let refreshRate = 600000; // Default 10 min
    let refreshTimer = null;  // Stores the ID of the interval

    // --- ELEMENTS ---
    const timeDisplay = document.getElementById('time');
    const statusPill = document.getElementById('status');
    const routeLabel = document.getElementById('route-label');
    const settingsOverlay = document.getElementById('settings-overlay');
    const footerInfo = document.getElementById('footer-info');
    const bgLayer = document.getElementById('bg-layer');

    // Inputs
    const inputApiKey = document.getElementById('input-api-key');
    const inputHome = document.getElementById('input-home');
    const inputWork = document.getElementById('input-work');
    const inputRefresh = document.getElementById('input-refresh');
    const inputBlur = document.getElementById('input-blur');
    const inputBright = document.getElementById('input-brightness');
    const bgUpload = document.getElementById('bg-upload');

    // Value Labels
    const blurVal = document.getElementById('blur-val');
    const brightVal = document.getElementById('bright-val');

    // --- INIT ---
    function init() {
        // Load API Data
        apiKey = localStorage.getItem('commute_api_key') || '';
        homeAddr = localStorage.getItem('commute_home_addr') || '';
        workAddr = localStorage.getItem('commute_work_addr') || '';
        refreshRate = parseInt(localStorage.getItem('commute_refresh_rate')) || 600000;

        // Set Input Values
        inputApiKey.value = apiKey;
        inputHome.value = homeAddr;
        inputWork.value = workAddr;
        inputRefresh.value = refreshRate;

        // Load Appearance Data
        const savedBlur = localStorage.getItem('commute_blur') || 15;
        const savedBright = localStorage.getItem('commute_bright') || 100;
        const savedBg = localStorage.getItem('commute_bg_image');

        // Apply Appearance
        setBlur(savedBlur);
        setBrightness(savedBright);
        if(savedBg) {
            bgLayer.style.backgroundImage = `url(${savedBg})`;
        }

        // Logic Start
        if(!apiKey || !homeAddr) {
            openSettings();
        } else {
            startService();
        }
    }

    // --- SERVICE MANAGEMENT (Resource Control) ---
    function startService() {
        // 1. Clear any existing timer to prevent duplicates
        if (refreshTimer) clearInterval(refreshTimer);
        
        // 2. Fetch immediately
        fetchCommuteTime();
        
        // 3. Start the interval (Sleeps between calls)
        refreshTimer = setInterval(fetchCommuteTime, refreshRate);
        console.log(`Service started. Updating every ${refreshRate/60000} minutes.`);
    }

    // --- DATA FETCHING ---
    async function fetchCommuteTime() {
        if(!apiKey) return;

        const origin = isHomeToWork ? homeAddr : workAddr;
        const destination = isHomeToWork ? workAddr : homeAddr;

        statusPill.innerText = 'Updating...';
        statusPill.className = 'status-pill';

        // Using corsproxy.io to bypass CORS
        const googleUrl = `https://maps.googleapis.com/maps/api/distancematrix/json?units=imperial&origins=${encodeURIComponent(origin)}&destinations=${encodeURIComponent(destination)}&departure_time=now&key=${apiKey}`;
        const proxyUrl = `https://corsproxy.io/?${encodeURIComponent(googleUrl)}`;

        try {
            const response = await fetch(proxyUrl);
            const data = await response.json();

            if (data.status !== 'OK') {
                console.error("API Error: ", data);
                statusPill.innerText = data.error_message || data.status;
                statusPill.className = 'status-pill status-delay';
                return;
            }

            const element = data.rows[0].elements[0];
            
            if (element.status === 'OK') {
                const durationTraffic = element.duration_in_traffic.value; 
                const durationTypical = element.duration.value; 
                let cleanTime = element.duration_in_traffic.text;

                // Clean Text
                cleanTime = cleanTime.replace(' hours', 'h').replace(' hour', 'h');
                cleanTime = cleanTime.replace(' mins', 'm').replace(' min', 'm');
                timeDisplay.innerText = cleanTime;

                // Update Timestamp
                const now = new Date();
                const timeString = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                footerInfo.innerText = `Updated: ${timeString}`;

                const delayMinutes = Math.round((durationTraffic - durationTypical) / 60);

                if (delayMinutes >= 5) {
                    statusPill.className = 'status-pill status-delay';
                    statusPill.innerText = `+${delayMinutes} min delay`;
                } else if (delayMinutes <= -2) {
                     statusPill.className = 'status-pill status-fast';
                     statusPill.innerText = 'Faster Than Usual';
                } else {
                    statusPill.className = 'status-pill status-good';
                    statusPill.innerText = 'Traffic Normal';
                }
            } else {
                timeDisplay.innerText = "--";
                statusPill.innerText = "Check Address";
            }
        } catch (error) {
            console.error(error);
            statusPill.innerText = "Connection Fail";
            statusPill.className = 'status-pill status-delay';
        }
    }

    // --- UI HELPERS ---
    function openSettings() { settingsOverlay.style.display = 'flex'; }
    function closeSettings() { settingsOverlay.style.display = 'none'; }

    function toggleDirection() {
        if(!homeAddr || !workAddr) return openSettings();
        isHomeToWork = !isHomeToWork;
        routeLabel.innerText = isHomeToWork ? "HOME ➡ WORK" : "WORK ➡ HOME";
        // Manual toggle triggers immediate fetch
        fetchCommuteTime();
        // Reset timer to avoid double-update
        if (refreshTimer) clearInterval(refreshTimer);
        refreshTimer = setInterval(fetchCommuteTime, refreshRate);
    }

    // --- APPEARANCE HANDLERS ---
    function setBlur(val) {
        document.documentElement.style.setProperty('--glass-blur', `${val}px`);
        inputBlur.value = val;
        blurVal.innerText = `${val}px`;
    }

    function setBrightness(val) {
        document.documentElement.style.setProperty('--bg-brightness', `${val}%`);
        inputBright.value = val;
        brightVal.innerText = `${val}%`;
    }

    inputBlur.addEventListener('input', (e) => setBlur(e.target.value));
    inputBright.addEventListener('input', (e) => setBrightness(e.target.value));

    bgUpload.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if(file) {
            const reader = new FileReader();
            reader.onload = function(evt) {
                const result = evt.target.result;
                bgLayer.style.backgroundImage = `url(${result})`;
                try { localStorage.setItem('commute_bg_image', result); } catch(err) {}
            };
            reader.readAsDataURL(file);
        }
    });

    function saveSettings() {
        // Save Data
        apiKey = inputApiKey.value.trim();
        homeAddr = inputHome.value.trim();
        workAddr = inputWork.value.trim();
        refreshRate = parseInt(inputRefresh.value);

        localStorage.setItem('commute_api_key', apiKey);
        localStorage.setItem('commute_home_addr', homeAddr);
        localStorage.setItem('commute_work_addr', workAddr);
        localStorage.setItem('commute_refresh_rate', refreshRate);
        
        // Save Appearance
        localStorage.setItem('commute_blur', inputBlur.value);
        localStorage.setItem('commute_bright', inputBright.value);

        closeSettings();
        startService(); // Restart timer with new rate
    }

    init();
</script>
</body>
</html>
