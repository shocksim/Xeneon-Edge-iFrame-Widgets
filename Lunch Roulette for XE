<body>

<div id="sidebar">
    <h2>üçΩÔ∏è Lunch Roulette</h2>

    <div class="control-group">
        <label>Starting Address</label>
        <input id="address-input" type="text" placeholder="Start typing address...">
    </div>

    <div class="control-group">
        <label>Radius: <span id="radius-val">1.5</span> km</label>
        <input id="radius-slider" type="range" min="0.5" max="10" step="0.5" value="1.5">
    </div>

    <div class="control-group">
        <label>Cuisine (Optional)</label>
        <input id="cuisine-input" type="text" placeholder="e.g. Mexican, Sushi, Pizza">
    </div>

    <button id="decide-btn" onclick="findLunch()">üé≤ Spin the Wheel</button>

    <div id="result-card">
        <div id="result-name">Restaurant Name</div>
        <div id="result-address">123 Main St</div>
        <div id="result-rating"></div>
        <br>
        <button class="secondary" onclick="confirmChoice()">‚úÖ Go Here</button>
        <button class="danger" onclick="blacklistCurrent()">üö´ Blacklist & Re-roll</button>
    </div>

    <div id="history-log">
        <strong>Recent History (7 Days):</strong>
        <div id="history-list"></div>
    </div>
    
    <div id="settings-panel">
        <div class="setting-row">
            <span>Dark Mode</span>
            <input type="checkbox" id="dark-mode-toggle" onchange="toggleDarkMode()">
        </div>
        <div class="setting-row">
            <span>Theme Color</span>
            <input type="color" id="theme-color-picker" value="#007bff" onchange="updateThemeColor(this.value)">
        </div>
        <div style="text-align: right; font-size: 0.8em;">
            <a href="#" onclick="toggleSettings()" style="color:var(--text-muted); text-decoration:none;">Close</a>
        </div>
    </div>

    <div id="sidebar-footer">
        <button id="clear-btn" class="footer-btn" onclick="clearData()">Clear History</button>
        <button id="settings-btn" class="footer-btn" onclick="toggleSettings()" title="Settings">‚öôÔ∏è</button>
    </div>
</div>

<div id="map"></div>

<script>
    // --- APP STATE ---
    let map, service, marker, circle, autocomplete, currentPlace, searchCenter;
    let blacklist = JSON.parse(localStorage.getItem('lunchBlacklist')) || [];
    let history = JSON.parse(localStorage.getItem('lunchHistory')) || [];
    
    // Load Settings
    const savedTheme = localStorage.getItem('lunchThemeColor') || '#007bff';
    const savedDarkMode = localStorage.getItem('lunchDarkMode') === 'true';

    // --- INITIALIZATION ---
    function initApp() {
        if(savedDarkMode) {
            document.body.classList.add('dark-mode');
            document.getElementById('dark-mode-toggle').checked = true;
        }
        updateThemeColor(savedTheme);
        document.getElementById('theme-color-picker').value = savedTheme;
    }
    
    // --- SETTINGS LOGIC ---
    function toggleSettings() {
        const panel = document.getElementById('settings-panel');
        // Toggle display
        panel.style.display = panel.style.display === 'block' ? 'none' : 'block';
    }

    function toggleDarkMode() {
        document.body.classList.toggle('dark-mode');
        localStorage.setItem('lunchDarkMode', document.body.classList.contains('dark-mode'));
    }

    function updateThemeColor(color) {
        document.documentElement.style.setProperty('--primary', color);
        document.documentElement.style.setProperty('--primary-hover', adjustColor(color, -20));
        localStorage.setItem('lunchThemeColor', color);
        
        if(circle) {
            circle.setOptions({ strokeColor: color, fillColor: color });
        }
        // Update Card Border
        const card = document.getElementById('result-card');
        if(card.style.display === 'block') {
            card.style.borderLeftColor = color;
        }
    }

    function adjustColor(color, amount) {
        return '#' + color.replace(/^#/, '').replace(/../g, color => ('0'+Math.min(255, Math.max(0, parseInt(color, 16) + amount)).toString(16)).substr(-2));
    }

    // --- MAP LOGIC ---
    function initMap() {
        initApp(); // Run UI setup

        // Default: San Francisco
        searchCenter = { lat: 37.7749, lng: -122.4194 }; 

        map = new google.maps.Map(document.getElementById("map"), {
            center: searchCenter,
            zoom: 14,
            mapTypeControl: false,
            streetViewControl: false,
            fullscreenControl: false
        });

        service = new google.maps.places.PlacesService(map);

        const input = document.getElementById("address-input");
        autocomplete = new google.maps.places.Autocomplete(input);
        autocomplete.bindTo("bounds", map);

        autocomplete.addListener("place_changed", () => {
            const place = autocomplete.getPlace();
            if (!place.geometry || !place.geometry.location) return;

            searchCenter = place.geometry.location;
            map.setCenter(searchCenter);
            map.setZoom(14);
            updateCircle();
        });

        document.getElementById("radius-slider").addEventListener("input", function() {
            document.getElementById("radius-val").innerText = this.value;
            updateCircle();
        });
        
        updateHistoryDisplay();
    }

    function updateCircle() {
        if (circle) circle.setMap(null);
        
        const km = parseFloat(document.getElementById("radius-slider").value);
        const meters = km * 1000;
        const currentColor = getComputedStyle(document.documentElement).getPropertyValue('--primary').trim();

        circle = new google.maps.Circle({
            strokeColor: currentColor,
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: currentColor,
            fillOpacity: 0.15,
            map: map,
            center: searchCenter,
            radius: meters,
            clickable: false 
        });
    }

    function findLunch() {
        if (!searchCenter) {
            alert("Please select a location first.");
            return;
        }

        const btn = document.getElementById("decide-btn");
        btn.disabled = true;
        btn.innerText = "‚è≥ Spinning...";

        const km = parseFloat(document.getElementById("radius-slider").value);
        const radiusMeters = km * 1000;
        const cuisine = document.getElementById("cuisine-input").value;

        const request = {
            location: searchCenter,
            radius: radiusMeters,
            type: 'restaurant',
            keyword: cuisine
        };

        service.nearbySearch(request, (results, status) => {
            btn.disabled = false;
            btn.innerText = "üé≤ Spin the Wheel";

            if (status === google.maps.places.PlacesServiceStatus.OK && results.length > 0) {
                processResults(results);
            } else {
                if (status === "ZERO_RESULTS") {
                    alert("No restaurants found! Try increasing the radius.");
                } else {
                    alert("Google API Error: " + status);
                }
            }
        });
    }

    function processResults(results) {
        let pool = results.filter(p => !blacklist.includes(p.place_id));
        const oneWeekAgo = Date.now() - (7 * 24 * 60 * 60 * 1000);
        const recentIds = history.filter(h => h.timestamp > oneWeekAgo).map(h => h.id);
        pool = pool.filter(p => !recentIds.includes(p.place_id));

        if (pool.length === 0) {
            alert("No options left! You've either blacklisted or visited everything nearby recently.");
            return;
        }

        const winner = pool[Math.floor(Math.random() * pool.length)];
        displayResult(winner);
    }

    function displayResult(place) {
        currentPlace = place;
        
        const card = document.getElementById("result-card");
        card.style.display = "block";
        card.style.borderLeftColor = getComputedStyle(document.documentElement).getPropertyValue('--primary');

        document.getElementById("result-name").innerText = place.name;
        document.getElementById("result-address").innerText = place.vicinity;
        document.getElementById("result-rating").innerText = place.rating ? `‚≠ê ${place.rating} (${place.user_ratings_total})` : "No Rating";

        if (marker) marker.setMap(null);
        marker = new google.maps.Marker({
            position: place.geometry.location,
            map: map,
            title: place.name,
            animation: google.maps.Animation.DROP
        });
        
        map.panTo(place.geometry.location);
    }

    function confirmChoice() {
        if (!currentPlace) return;
        history.push({ id: currentPlace.place_id, name: currentPlace.name, timestamp: Date.now() });
        localStorage.setItem('lunchHistory', JSON.stringify(history));
        
        updateHistoryDisplay();
        document.getElementById("result-card").style.display = "none";
    }

    function blacklistCurrent() {
        if (!currentPlace) return;
        if (confirm(`Never recommend ${currentPlace.name} again?`)) {
            blacklist.push(currentPlace.place_id);
            localStorage.setItem('lunchBlacklist', JSON.stringify(blacklist));
            findLunch(); 
        }
    }

    function updateHistoryDisplay() {
        const container = document.getElementById("history-list");
        container.innerHTML = "";
        const oneWeekAgo = Date.now() - (7 * 24 * 60 * 60 * 1000);
        const validHistory = history.filter(h => h.timestamp > oneWeekAgo);

        if (validHistory.length === 0) {
            container.innerHTML = "<i>No recent visits.</i>";
            return;
        }

        validHistory.forEach(h => {
            const div = document.createElement("div");
            div.textContent = `‚Ä¢ ${h.name}`;
            container.appendChild(div);
        });
    }

    // --- FIXED CLEAR DATA FUNCTION ---
    function clearData() {
        if(confirm("Clear all history and blacklist data?")) {
            // 1. Remove specific keys so we don't wipe Theme/Dark mode settings
            localStorage.removeItem('lunchBlacklist');
            localStorage.removeItem('lunchHistory');

            // 2. Reset the variables in memory immediately
            blacklist = [];
            history = [];

            // 3. Update the visual history list
            updateHistoryDisplay();

            // 4. Clear the current result card if open
            document.getElementById("result-card").style.display = "none";
            if (marker) marker.setMap(null);
            currentPlace = null;
        }
    }
</script>

<!-- ADD YOUR GOOGLE CLOUD API BELOW. MUST HAVE PLACES/PLACES (NEW)/MAPS JAVASCRIPT API's ENABLED IN GOOGLE CLOUD LIBRARY. SHOULD BE FREE UP TO 10K CALLS/MO. -->

<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&libraries=places&callback=initMap" async defer></script>

</body>
