    <style>
        /* --- RESET & LAYOUT --- */
        * { box-sizing: border-box; margin: 0; padding: 0; }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #0d0d0d; 
            color: #ffffff;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        /* --- WIDGET CONTAINER --- */
        .widget-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 2rem;
            width: 300px; 
            text-align: center;
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.5);
        }

        /* --- CLOCK STYLES --- */
        .time {
            font-size: 3.5rem;
            font-weight: 200;
            letter-spacing: -2px;
            line-height: 1;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }

        .date {
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: rgba(255, 255, 255, 0.6);
            margin-bottom: 2rem;
        }

        /* --- MOON VISUALS --- */
        .moon-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
        }

        .moon-svg {
            width: 80px;
            height: 80px;
            filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.15));
        }
        
        .moon-outline {
            stroke: rgba(255, 255, 255, 0.2);
            stroke-width: 1.5;
            fill: transparent;
        }

        .moon-fill {
            fill: #ffffff;
            transition: d 0.5s ease; /* Smooth transition if phase changes */
        }

        .moon-label {
            font-size: 0.9rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            color: #ffffff;
        }
        
        .illumination {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.5);
            font-weight: 400;
        }
