            width: 450px;              /* was 300px */
            
            text-align: center;
            box-shadow: 0 12px 48px 0 rgba(0, 0, 0, 0.5);
        }

        /* --- CLOCK STYLES (Scaled 1.5x) --- */
        .time {
            font-size: 5.25rem;        /* was 3.5rem */
