    <script>
        // --- 1. SETTINGS & UI LOGIC ---
        const settingsBtn = document.getElementById('settingsBtn');
        const settingsMenu = document.getElementById('settingsMenu');
        const bgLayer = document.getElementById('bgLayer');
        const widgetCard = document.getElementById('widgetCard');
        
        // Inputs
        const fileInput = document.getElementById('file-upload');
        const brightnessRange = document.getElementById('brightnessRange');
        const blurRange = document.getElementById('blurRange');
        const formatToggle = document.getElementById('formatToggle');
        const ampmToggle = document.getElementById('ampmToggle');
        
        // Value Displays
        const brightnessVal = document.getElementById('brightnessVal');
        const blurVal = document.getElementById('blurVal');
        const ampmDisplay = document.getElementById('ampmDisplay');

        // Menu Toggle
        settingsBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            settingsMenu.classList.toggle('active');
        });
        document.addEventListener('click', (e) => {
            if (!settingsMenu.contains(e.target) && !settingsBtn.contains(e.target)) {
                settingsMenu.classList.remove('active');
            }
        });

        // Background Upload
        fileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (evt) => bgLayer.style.backgroundImage = `url(${evt.target.result})`;
                reader.readAsDataURL(file);
            }
        });

        // Background Brightness Slider
        brightnessRange.addEventListener('input', (e) => {
            const val = parseFloat(e.target.value);
            // Update the filter
            bgLayer.style.filter = `brightness(${val})`;
            // Update percentage display (e.g., 1 = 100%)
            brightnessVal.innerText = `${Math.round(val * 100)}%`;
        });

        // Glass Blur Slider
        blurRange.addEventListener('input', (e) => {
            const val = e.target.value;
            widgetCard.style.backdropFilter = `blur(${val}px)`;
            widgetCard.style.webkitBackdropFilter = `blur(${val}px)`;
            blurVal.innerText = `${val}px`;
        });

        // Clock Toggles
        let is24Hour = true; 
        let showAmPm = false;

        formatToggle.addEventListener('change', (e) => {
            is24Hour = e.target.checked;
            updateClock();
        });

        ampmToggle.addEventListener('change', (e) => {
            showAmPm = e.target.checked;
            updateClock();
        });


        // --- 2. CLOCK LOGIC ---
        function updateClock() {
            const now = new Date();
            let hours = now.getHours();
            let minutes = now.getMinutes();
            let ampmText = hours >= 12 ? 'PM' : 'AM';

            // Visibility logic with smooth collapse
            if (showAmPm) {
                ampmDisplay.innerText = ampmText;
                ampmDisplay.classList.add('visible');
            } else {
                ampmDisplay.classList.remove('visible');
            }

            // Digit formatting
            let hStr;
            if (is24Hour) {
                hStr = hours.toString().padStart(2, '0');
            } else {
                let h = hours % 12;
                h = h ? h : 12;
                hStr = h.toString().padStart(2, '0');
            }
            
            let mStr = minutes.toString().padStart(2, '0');

            document.getElementById('clock').innerText = `${hStr}:${mStr}`;
            document.getElementById('date').innerText = now.toLocaleDateString('en-US', { 
                weekday: 'long', month: 'short', day: 'numeric' 
            });
        }

        // --- 3. MOON LOGIC (UNTOUCHED) ---
        const moonPaths = {
            new: "", 
            waxCre: "M32,2 A30,30 0 0,1 32,62 A22,30 0 0,0 32,2",
            firstQ: "M32,2 A30,30 0 0,1 32,62 L32,2Z",
            waxGib: "M32,2 A30,30 0 0,1 32,62 A38,30 0 0,1 32,2",
            full: "M32,2 A30,30 0 1,1 32,62 A30,30 0 1,1 32,2",
            wanGib: "M32,2 A38,30 0 0,0 32,62 A30,30 0 0,1 32,2",
            lastQ: "M32,2 A30,30 0 0,0 32,62 L32,2Z",
            wanCre: "M32,2 A22,30 0 0,1 32,62 A30,30 0 0,0 32,2"
        };

        function getMoonPhase(date) {
            const synodicMonth = 29.53058867;
            const refDate = new Date('2000-01-06T18:14:00'); 
            const diffTime = date.getTime() - refDate.getTime();
            const diffDays = diffTime / (1000 * 60 * 60 * 24);
            let phase = (diffDays % synodicMonth) / synodicMonth;
            if (phase < 0) phase += 1;

            let phaseName = "", pathData = "";

            if (phase < 0.025 || phase > 0.975) { phaseName = "New Moon"; pathData = moonPaths.new; } 
            else if (phase < 0.225) { phaseName = "Waxing Crescent"; pathData = moonPaths.waxCre; } 
            else if (phase < 0.275) { phaseName = "First Quarter"; pathData = moonPaths.firstQ; } 
            else if (phase < 0.475) { phaseName = "Waxing Gibbous"; pathData = moonPaths.waxGib; } 
            else if (phase < 0.525) { phaseName = "Full Moon"; pathData = moonPaths.full; } 
            else if (phase < 0.725) { phaseName = "Waning Gibbous"; pathData = moonPaths.wanGib; } 
            else if (phase < 0.775) { phaseName = "Last Quarter"; pathData = moonPaths.lastQ; } 
            else { phaseName = "Waning Crescent"; pathData = moonPaths.wanCre; }

            let illumination = Math.abs(phase - 0.5) * 2; 
            illumination = (1 - illumination) * 100;

            return { name: phaseName, path: pathData, illum: Math.round(illumination) };
        }

        function updateMoon() {
            const now = new Date();
            const phaseData = getMoonPhase(now);
            document.getElementById('moon-path').setAttribute('d', phaseData.path);
            document.getElementById('moon-phase').innerText = phaseData.name;
            document.getElementById('moon-illum').innerText = phaseData.illum + "% Illumination";
        }

        // --- 4. INITIALIZATION ---
        function init() {
            updateClock();
            updateMoon();
            
            const now = new Date();
            const secondsUntilNextMinute = 60 - now.getSeconds();
            
            setTimeout(() => {
                updateClock(); 
                setInterval(updateClock, 60000); 
            }, secondsUntilNextMinute * 1000);

            setInterval(updateMoon, 1000 * 60 * 60); 
        }

        init();
    </script>
</body>
</html>
