<body>

<div id="widget-container">
    <header>
        <div class="header-top">
            <h2>Matchday Live</h2>
            <div class="live-indicator"><span class="dot"></span> LIVE DATA</div>
        </div>
        
        <div class="controls">
            <div class="control-group">
                <span class="label">Leagues:</span>
                <div class="league-toggles">
                    <input type="checkbox" id="epl" class="league-checkbox" value="eng.1" checked>
                    <label for="epl" class="league-label">EPL</label>

                    <input type="checkbox" id="laliga" class="league-checkbox" value="esp.1">
                    <label for="laliga" class="league-label">La Liga</label>

                    <input type="checkbox" id="bundes" class="league-checkbox" value="ger.1">
                    <label for="bundes" class="league-label">Bundesliga</label>

                    <input type="checkbox" id="seriea" class="league-checkbox" value="ita.1">
                    <label for="seriea" class="league-label">Serie A</label>

                    <input type="checkbox" id="ligue1" class="league-checkbox" value="fra.1">
                    <label for="ligue1" class="league-label">Ligue 1</label>
                </div>
             </div>

             <div class="control-group">
                <span class="label">Filter Team:</span>
                <select id="teamSelect">
                    <option value="all">Show All</option>
                </select>
            </div>
        </div>
    </header>

    <div id="scoreboard">
        <div class="message">Loading scores...</div>
    </div>

    <div class="attribution">
        Data provided by ESPN API | Widget Design v2.1
    </div>
</div>

<script>
    // Configuration for endpoints
    const BASE_URL = "https://site.api.espn.com/apis/site/v2/sports/soccer/";
    const REFRESH_RATE = 60000;
    
    // State
    let allGamesCache = []; 
    let teamList = new Set();
    let currentFavorite = localStorage.getItem('soccer_fav_team') || 'all';

    // Map internal codes to display names for badges
    const LEAGUE_NAMES = {
        'eng.1': 'EPL',
        'esp.1': 'LIGA',
        'ger.1': 'BUND',
        'ita.1': 'SER A',
        'fra.1': 'LIG 1'
    };

    // Initialize inputs
    document.getElementById('teamSelect').value = currentFavorite;
    document.querySelectorAll('.league-checkbox').forEach(box => {
        box.addEventListener('change', () => {
            fetchScores(); // Re-fetch when leagues change
        });
    });

    document.getElementById('teamSelect').addEventListener('change', (e) => {
        currentFavorite = e.target.value;
        localStorage.setItem('soccer_fav_team', currentFavorite);
        renderGames(allGamesCache); // Just re-render, don't re-fetch
    });

    async function fetchScores() {
        const scoreboard = document.getElementById('scoreboard');
        
        // Get checked leagues
        const activeLeagues = Array.from(document.querySelectorAll('.league-checkbox:checked'))
                                   .map(cb => cb.value);

        if (activeLeagues.length === 0) {
            scoreboard.innerHTML = '<div class="message">Please select at least one league.</div>';
            return;
        }

        // Show loading only if it's the initial load or empty
        if(scoreboard.children.length === 0 || scoreboard.querySelector('.message')) {
            scoreboard.innerHTML = '<div class="message">Loading scores...</div>';
        }

        try {
            // Create an array of fetch promises
            const promises = activeLeagues.map(leagueCode => 
                fetch(`${BASE_URL}${leagueCode}/scoreboard`)
                    .then(res => res.json())
                    .then(data => ({ code: leagueCode, data: data }))
            );

            const results = await Promise.all(promises);
            
            // Combine all events into one array
            allGamesCache = [];
            
            results.forEach(result => {
                const leagueCode = result.code;
                if(result.data.events) {
                    // Tag each event with its league code for the badge
                    const taggedEvents = result.data.events.map(ev => ({...ev, leagueCode}));
                    allGamesCache = allGamesCache.concat(taggedEvents);
                }
            });

            // Sort games: Live first, then by time
            allGamesCache.sort((a, b) => {
                // Simple sort logic: date
                return new Date(a.date) - new Date(b.date);
            });

            updateTeamDropdown(allGamesCache);
            renderGames(allGamesCache);

        } catch (error) {
            console.error("Error fetching scores:", error);
            scoreboard.innerHTML = '<div class="message">Unable to load scores. API may be rate limited.</div>';
        }
    }

    function updateTeamDropdown(games) {
        const select = document.getElementById('teamSelect');
        const currentSelection = select.value;
        
        // Extract all teams from current games
        let teams = [];
        games.forEach(game => {
            game.competitions[0].competitors.forEach(comp => {
                teams.push({
                    id: comp.team.id,
                    name: comp.team.displayName
                });
            });
        });

        // Remove duplicates and sort alpha
        teams = teams.filter((v,i,a)=>a.findIndex(t=>(t.id===v.id))===i);
        teams.sort((a,b) => a.name.localeCompare(b.name));

        // Rebuild options
        select.innerHTML = '<option value="all">Show All</option>';
        teams.forEach(team => {
            const option = document.createElement('option');
            option.value = team.id;
            option.textContent = team.name;
            select.appendChild(option);
        });

        // Restore selection if it still exists in the list
        if (teams.some(t => t.id === currentSelection)) {
            select.value = currentSelection;
        } else {
            select.value = 'all';
        }
    }

    function renderGames(games) {
        const scoreboard = document.getElementById('scoreboard');
        scoreboard.innerHTML = '';

        // Filter based on favorite selection
        const filteredGames = currentFavorite === 'all' 
            ? games 
            : games.filter(g => {
                const comps = g.competitions[0].competitors;
                return comps.some(c => c.team.id === currentFavorite);
            });

        if (filteredGames.length === 0) {
            scoreboard.innerHTML = '<div class="message">No matches found for current selection.</div>';
            return;
        }

        filteredGames.forEach(game => {
            const competition = game.competitions[0];
            const status = game.status.type.shortDetail;
            const isCompleted = game.status.type.completed;
            const leagueName = LEAGUE_NAMES[game.leagueCode] || 'SOC';

            const homeTeam = competition.competitors.find(c => c.homeAway === 'home');
            const awayTeam = competition.competitors.find(c => c.homeAway === 'away');

            const isFavGame = (homeTeam.team.id === currentFavorite || awayTeam.team.id === currentFavorite);

            const card = document.createElement('div');
            card.className = `game-card ${isFavGame ? 'favorite-highlight' : ''}`;
            
            card.innerHTML = `
                <div class="league-badge">${leagueName}</div>
                <div class="game-status">${status}</div>
                
                <div class="team-row ${isCompleted && Number(homeTeam.score) < Number(awayTeam.score) ? 'loser' : 'winner'}">
                    <div class="team-info">
                        <img src="${homeTeam.team.logo}" class="team-logo" alt="${homeTeam.team.abbreviation}">
                        <span class="team-name">${homeTeam.team.abbreviation || homeTeam.team.shortDisplayName}</span>
                    </div>
                    <span class="score">${homeTeam.score}</span>
                </div>

                <div class="team-row ${isCompleted && Number(awayTeam.score) < Number(homeTeam.score) ? 'loser' : 'winner'}">
                    <div class="team-info">
                        <img src="${awayTeam.team.logo}" class="team-logo" alt="${awayTeam.team.abbreviation}">
                        <span class="team-name">${awayTeam.team.abbreviation || awayTeam.team.shortDisplayName}</span>
                    </div>
                    <span class="score">${awayTeam.score}</span>
                </div>
            `;

            scoreboard.appendChild(card);
        });
    }

    // Initial Load
    fetchScores();
    setInterval(fetchScores, REFRESH_RATE);
</script>

</body>
</html>
