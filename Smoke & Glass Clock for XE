            <input type="range" id="blurRange" min="0" max="50" value="20">
        </div>

        <div class="setting-item">
            <div class="toggle-row">
                <span class="setting-label">Show AM/PM</span>
                <label class="switch">
                    <input type="checkbox" id="ampmToggle" checked>
                    <span class="slider"></span>
                </label>
            </div>
        </div>
    </div>

    <script>
        const settingsBtn = document.getElementById('settingsBtn');
        const settingsMenu = document.getElementById('settingsMenu');
        const fileInput = document.getElementById('file-upload');
        const bgLayer = document.getElementById('bgLayer');
        const glassLayer = document.getElementById('glassLayer');
        const blurRange = document.getElementById('blurRange');
        const blurValText = document.getElementById('blurVal');
        const ampmToggle = document.getElementById('ampmToggle');
        const ampmDisplay = document.getElementById('ampm');

        // Toggle Menu
        settingsBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            settingsMenu.classList.toggle('active');
        });

        document.addEventListener('click', (e) => {
            if (!settingsMenu.contains(e.target) && !settingsBtn.contains(e.target)) {
                settingsMenu.classList.remove('active');
            }
        });

        // Background
        fileInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    bgLayer.style.backgroundImage = `url(${event.target.result})`;
                }
                reader.readAsDataURL(file);
            }
        });

        // Blur
        blurRange.addEventListener('input', (e) => {
            const val = e.target.value;
            glassLayer.style.backdropFilter = `blur(${val}px)`;
            glassLayer.style.webkitBackdropFilter = `blur(${val}px)`;
            blurValText.innerText = `${val}px`;
        });

        // AM/PM Toggle (Updates class instead of just opacity)
        let showAmPm = true;
        ampmToggle.addEventListener('change', (e) => {
            showAmPm = e.target.checked;
            updateAmPmVisibility();
        });

        function updateAmPmVisibility() {
            if (showAmPm) {
                ampmDisplay.classList.remove('hidden');
            } else {
                ampmDisplay.classList.add('hidden');
            }
        }

        // Clock Logic
        let prevHours = null;
        let prevMinutes = null;

        function updateTime() {
            const now = new Date();
            let rawHours = now.getHours();
            let rawMinutes = now.getMinutes();

            const ampmString = rawHours >= 12 ? 'PM' : 'AM';
            ampmDisplay.innerText = ampmString;

            let displayHours = rawHours % 12;
            displayHours = displayHours ? displayHours : 12; 
            
            let hStr = displayHours.toString(); 
            let mStr = rawMinutes.toString().padStart(2, '0');

            if (hStr !== prevHours) {
                animateChange('hours-display', hStr);
                prevHours = hStr;
            }

            if (mStr !== prevMinutes) {
                animateChange('minutes-display', mStr);
                prevMinutes = mStr;
            }
        }

        function animateChange(elementId, newValue) {
            const container = document.getElementById(elementId);
            const oldText = container.innerText;
            if (oldText === "" || oldText === "LOADING") {
                container.innerText = newValue;
                return;
            }
            const ghost = document.createElement("span");
            ghost.innerText = oldText;
            ghost.className = "smoke-out";
            container.parentElement.appendChild(ghost);

            container.innerText = newValue;
            container.classList.remove("smoke-in");
            void container.offsetWidth; 
            container.classList.add("smoke-in");

            setTimeout(() => { ghost.remove(); }, 1200);
        }

        function init() {
            updateTime();
            updateAmPmVisibility();
            const now = new Date();
            const secondsUntilNextMinute = 60 - now.getSeconds();
            setTimeout(() => {
                updateTime();
                setInterval(updateTime, 60000); 
            }, secondsUntilNextMinute * 1000);
        }

        init();
    </script>
</body>
</html>
